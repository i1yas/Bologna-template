.instagram-big
	display block
	&__title
		padding-y 70px
		text-align center
	&__sign
		margin-bottom 20px
		font-family $rufina
		font-size 36px
		font-weight bold
		color $black
	&__decoration
		position relative
	&__line
		position absolute
		z-index -1
		top 50%
		left 50%
		margin-left -12.5%
		background-color #dcdcdc
		size 25% 1px
	&__circle
		margin-x auto
		background-color #b2ae7e
		border-radius 50%
		size 19px
	&__photos-wrapper
		overflow hidden
		@media(min-width 980px)
			position relative
			height 600px
	&__photos
		display flex
		flex-direction column
		width 100%
		height 600px
		flex-wrap wrap
		@media(min-width 980px)
			position absolute
			left 50%
			margin-left -50% // @stylint ignore
			margin-left -50vw
	&__photo-container
		display block
		&_rect
			display flex
			height 300px
		@media(max-width 980px)
			&_afterHalf
				display none
	&__photo-container_rect &__photo
		height 100%
	&__photo
		display block
		width 100%
		height auto