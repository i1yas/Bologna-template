include ../wrapper/wrapper
include ../text-input/text-input
include ../icon/icon

mixin header()
	+b.header&attributes(attributes)
		+e.logo
			+e.title
				| Bologna
			+e.desc
				| Wordpress theme for bloggers
		+e.menu-container.wrapper_wide
			//- +e.mobile-icon
			//- 		+e.mobile-i
			//- 		+e.mobile-i
			//- 		+e.mobile-i
			+e.menu
				+e.icons
					+e('button').icon-btn
						+icon('behance').icon._be
					+e('button').icon-btn
						+icon('facebook').icon._fb
					+e('button').icon-btn
						+icon('linkedin').icon._in
					+e('button').icon-btn
						+icon('pinterest').icon._pt
				+e.navigation
					- var navItems = getData('top_navigation')
					- var anchor = ''
					- for(var i = 0; i < navItems.length; i++)
						- anchor = '#' + navItems[i]
						+e('a').nav-item(href=anchor)=navItems[i]
				+e.search
					+e.search-container._hidden
						+e.search-field._hidden
							+text-input('Search...', 'small')
						+e('button').search-btn._hidden
							+icon('search').search-icon
