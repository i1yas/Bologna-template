.banner
	display block
	text-align center
	text-decoration none
	background-color $light-grey
	background-image url(../images/banner/background.jpg)
	background-position 50% 50%
	background-size cover
	@media(max-width 600px)
		background-position 80% 50%
	&__wrapper
		display block
		height 690px
		@media(max-width 1450px)
			height 500px
		@media(max-width 600px)
			height 400px
	&__align
		display table
		size 100%
	&__text
		padding-bottom 60px
		display table-cell
		vertical-align bottom
		size 100%
	&__tag
		margin-bottom 7px
		padding 5px 12px
		display inline-block
		font-weight bold
		letter-spacing 1.2px
		text-transform uppercase
		color white
		background-color #ff0000
	&__title
		margin-x auto
		width 45%
		font-family $rufina
		font-size 50px
		font-weight bold
		line-height 1.4
		color white
		opacity 1
		transition opacity .1s
	&:hover &__title
		opacity .85