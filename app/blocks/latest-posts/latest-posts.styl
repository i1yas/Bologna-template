.latest-posts
	display block
	&__post
		margin-top 35px
	&__post-category
		margin-bottom 15px
		padding-y 3px
		display inline-block
		font-style italic
		border-bottom 1px solid $light-grey
	&__post-title
		margin-bottom 27px
		display block
		font-family $rufina
		font-size 16px
		font-weight bold
		text-decoration none
		color $black
		&:hover
			color lighten($black, 30%)
	&__post-date
		margin-bottom 5px
		font-size 13px
		color $black
	&__month, &__day
		display inline
	&__year
		display inline
		color $page-grey
		&:before
			content '/ '